<div class="loginFormDesk center">
    {% if isAuth  %}
         <p>Welcome, {{ user }}!</p>
    {% else %}
        <form method="post">
            <input type='text' name='login' placeholder='admin'>
            <input type='password' name='pass' placeholder='123'>
            Save? <input type='checkbox' name='save'>
            <input type='submit' name='send' value='logIn'>
        </form>
    {% endif %}
</div>